<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyApp</title>
    <link rel="stylesheet" href="styles.css"></link>
</head>
<body>
    <div class="card">
        <div class="card__header">
            <h1>To Do App</h1>
        </div>
        <div class="card__body">
            <form action="/" method="POST" class="my-form">
                <input type="text" id="text" name="text">
                <button class="btn btn-add" type="submit">Add</button>
            </form>
            <div class="card__body_cols">
                <div class="card__body_cols_left">
                    <h2>To do</h2>
                    <ol class="card__body_to_do_list">
                        <% todos_todo.forEach(todo => { %>
                            <li class="todo-row">
                                <%= todo.text %> 
                                <form action="/<%= todo.id %>?_method=DELETE" method="POST" class="btn-form">
                                    <button class="btn btn-delete icon" type="submit">&times;</button>
                                </form>
                                <form action="/<%= todo.id %>?_method=PUT" method="POST" class="btn-form">
                                    <button class="btn btn-done icon" type="submit">&#10003;</button>
                                </form>
                            </li>
                        <% }) %>
                    </ol>
                </div>
                <div class="card__body_cols_right">
                    <h2>Done</h2>
                    <ol class="card__body_to_do_list">
                        <% todos_done.forEach(todo => { %>
                            <li class="todo-row">
                                <%= todo.text %> 
                                <form action="/<%= todo.id %>?_method=DELETE" method="POST" class="btn-form">
                                    <button class="btn btn-delete" type="submit">&times;</button>
                                </form>
                            </li>
                        <% }) %>
                    </ol>
                </div>
            </div>
        </div>
    </div>    
</body>
</html>
